<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_welcome"
        android:clipToPadding="false"
        tools:context=".ui.welcome.WelcomeActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_event" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/welcome_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="18dp"
                    android:fontFamily="@font/hkgrotesk_bold"
                    android:gravity="center"
                    android:text="Olá, seja bem-vindo ao aplicativo Eventos!"
                    android:textColor="@color/font_color_title"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/welcome_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:text="No aplicativo Eventos você só vai conhecer vários eventos super legais e todas as informações de como você pode curtir"
                    android:textColor="@color/font_color_subtitle"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button"
                    android:fontFamily="@font/hkgrotesk_bold"
                    android:paddingStart="32dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="32dp"
                    android:backgroundTint="@color/button_color"
                    android:paddingBottom="12dp"
                    android:text="Quero conhecer"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/icon_welcome"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="-25dp"
            android:background="@color/white"
            android:elevation="10dp"
            android:outlineProvider="paddedBounds"
            android:padding="12dp"
            android:src="@drawable/ic_confetti"
            android:translationZ="20dp"
            app:layout_constraintBottom_toTopOf="@+id/card_welcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:riv_corner_radius="360dp"
            app:riv_mutate_background="true"
            app:riv_oval="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
