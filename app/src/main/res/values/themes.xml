<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EventosSicredi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gradient_end_color</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/gradient_start_color
        </item>
        <item name="android:fontFamily">@font/hkgrotesk_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EventosSicredi.Detail">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi" tools:targetApi="l">true
        </item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi" tools:targetApi="l">true
        </item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white
        </item>
    </style>

    <style name="ErrorMessage">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hkgrotesk_bold</item>
    </style>

    <style name="Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hkgrotesk_bold</item>
        <item name="android:textColor">@color/font_color_title</item>
    </style>

    <style name="Title2">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hkgrotesk_bold</item>
        <item name="android:textColor">@color/font_color_title</item>
    </style>

    <style name="Price">
        <item name="android:fontFamily">@font/hkgrotesk_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubTitle">
        <item name="android:fontFamily">@font/hkgrotesk_regular</item>
        <item name="android:textColor">@color/font_color_subtitle</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/hkgrotesk_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/button_color</item>
    </style>
</resources>